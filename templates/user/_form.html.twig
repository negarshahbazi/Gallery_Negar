<form action={{path('app_user_edit', {'id': user.id})}} class="form" method="POST">
{{ form_widget(form._token) }}


<div class="form-group optional">
	{{ form_label(form.firstName, 'First Name') }}
	{{ form_widget(form.firstName, { 'attr': {'class': 'gt', 'placeholder': user.firstName} }) }}

</div>
<div class="form-group optional">
	{{ form_label(form.lastName, 'Last Name') }}
	{{ form_widget(form.lastName, { 'attr': {'class': 'gt', 'placeholder': user.lastName} }) }}

</div>
<div class="form-group optional">
	{{ form_label(form.address, 'Address') }}
	{{ form_widget(form.address, { 'attr': {'class': 'gt', 'placeholder': user.address} }) }}

</div>
<div class="form-group optional">
	{{ form_label(form.tel, 'Phone') }}
	{{ form_widget(form.tel, { 'attr': {'class': 'gt', 'placeholder': user.tel} }) }}

</div>
<div class="d-flex flex-column justify-content-end align-items-center">
