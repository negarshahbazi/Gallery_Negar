{% extends 'base.html.twig' %}

{% block body %}
	<style>
		body {
			background: linear-gradient(#510000, #820101);
		}
	</style>
	<div class="d-flex justify-content-between align-items-center titrPoster">
		<div class="d-flex flex-column justify-content-center align-items-center">
			<img class="vahshi" src="{{ asset('../../assets/img/young-woman-who-is-posing-covered-with-black-paint-removebg-preview.png') }}" alt="photo">
		</div>
		<h1 class="text-white">Gallery
		</h1>
		<div class="d-flex flex-column justify-content-center align-items-center">
			<img class="vahshi" src="{{ asset('../../assets/img/portrait-young-woman-who-is-posing-covered-with-black-paint__3_-removebg-preview.png') }}" alt="photo">

		</div>
	</div>

	<div class="backGroundGallery">
		<div class="w-100">
			<a class="text-center text-decoration-none text-white mx-auto" href="{{ path('app_home') }}"><img class="backButton  d-flex justify-content-start align-items-center" src="{{asset('../../assets/img/left-arrow_4518010-removebg-preview.png')}}" alt=""></a>
		</div>
		<h1 class="colorTitle">The latest paintings</h1>
		<div class="gallery">
			<input type="checkbox">
			<img class="shadow-lg" src="{{asset('assets/img/cubism2.jpg')}}" alt="">
			<img class="shadow-lg" src="{{asset('assets/img/cubism3.jpg')}}" alt="">
			<img class="shadow-lg" src="{{asset('assets/img/cubism4.jpg')}}" alt="">
			<img class="shadow-lg" src="{{asset('assets/img/magic6.jpg')}}" alt="">
			<img class="shadow-lg" src="{{asset('assets/img/magic7.jpg')}}" alt="">
			<img class="shadow-lg" src="{{asset('assets/img/magic8.jpg')}}" alt="">
			<img class="shadow-lg" src="{{asset('assets/img/cubism4.jpg')}}" alt="">
			<img class="shadow-lg" src="{{asset('assets/img/f.jpg')}}" alt="">
			<img class="shadow-lg" src="{{asset('assets/img/magic2.jpg')}}" alt="">
		</div>
	</div>
	<div class="position-relative">


		<div>
			<h1 class="text-white text-center">Don't let the walls of your home be empty and lonely without works of art!👩🏾‍🎨</h1>
		</div>
	</div>
	<div class="gallery-container">
		<div class="gallery-images">
			{% for paint in paints %}
				<div class="gallery-image">
					<div class="img-box">
						{% if paint.photo %}
							<a class="w-100 d-flex justify-content-center align-items-center" target="_blank" href="{{ path('app_paint', { 'id': paint.id }) }}">
								<img src="{{ paint.photo }}" alt="{{ paint.title }}">
								<div class="transparent-box"></div>
							</a>
						{% else %}
							<p class="caption">No image available for
								{{ paint.title }}</p>
						{% endif %}
						<div class="caption">
							<p>{{ paint.title }}</p>
							<p class="opacity-low">{{ paint.price }}</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<button class="refresh-button" onclick="refreshImages()">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewbox="0 0 16 16">
				<path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z"/>
				<path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466"/>
			</svg>
		</button>
	</div>

{% endblock %}
{% block javascripts %}
	 <script>
		 function refreshImages() {
	    location.reload(); // Rafraîchit la page pour changer les images aléatoirement
	}
	
		 </script>
{% endblock %}
