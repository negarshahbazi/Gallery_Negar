{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	{# header #}
	<div class="imgHeaderHome ">
		<div class="container">
			<div class="text-white text-center">
				<h1 class="mt-5">Welcome to Negar Art Gallery</h1>
				<h5>Where Art Transforms Spaces and Lives!</h5>
			</div>
		</div>
	</div>
	{# Heptagon #}
	<div class="text-center svgHeptagon">
		<svg
			xmlns="http://www.w3.org/2000/svg" width="500" height="500" class="bi bi-heptagon-fill " viewbox="0 0 16 16">
			<!-- Define linear gradient -->
			<defs>
				<linearGradient id="gradient" x1="0%" y1="0%" x2="0%" y2="100%">
					<stop offset="20%" style="stop-color:#050505"/>
					<stop offset="100%" style="stop-color:#A62800"/>
				</linearGradient>
			</defs>
			<!-- Use the linear gradient for filling the path -->
			<path
			fill="url(#gradient)" stroke="#FA0000" stroke-width="0.06" fill-rule="evenodd" d="M7.779.052a.5.5 0 0 1 .442 0l6.015 2.97a.5.5 0 0 1 .267.34l1.485 6.676a.5.5 0 0 1-.093.415l-4.162 5.354a.5.5 0 0 1-.395.193H4.662a.5.5 0 0 1-.395-.193L.105 10.453a.5.5 0 0 1-.093-.415l1.485-6.676a.5.5 0 0 1 .267-.34z"/>
			<!-- Add text -->
			<text x="50%" y="30%" dominant-baseline="middle" text-anchor="middle" fill="#FFFFFF" font-size="0.7">
				<tspan x="50%" dy="-1.5em">Experience the vivid tapestry</tspan>
				<tspan x="50%" dy="1em">of art and paint on our website,</tspan>
				<tspan x="50%" dy="1em">where colors intertwine to tell stories</tspan>
				<tspan x="50%" dy="1em">untold. With each stroke, immerse</tspan>
				<tspan x="50%" dy="1em">yourself in the depths of creativity,</tspan>
				<tspan x="50%" dy="1em">where imagination knows no bounds.</tspan>
				<tspan x="50%" dy="1em">Discover the transformative power</tspan>
				<tspan x="50%" dy="1em">of pigments, breathing life into</tspan>
				<tspan x="50%" dy="1em">visions and emotions. Join us in</tspan>
				<tspan x="50%" dy="1em">celebrating the timeless allure of</tspan>
				<tspan x="50%" dy="1em">artistry, where every canvas is a journey</tspan>
				<tspan x="50%" dy="1em">waiting to unfold. Welcome to a world</tspan>
				<tspan x="50%" dy="1em">where art and paint unite to ignite</tspan>
				<tspan x="50%" dy="1em">the soul.</tspan>
			</text>
		</svg>

	</div>
	{# endHeptagon #}

	{# category #}
	<div class=" text-center  textCube ">
		<div class="row d-flex justify-content-center align-items-center">
			<div class="col-1 m-5">
				<a href="{{ path('app_home') }}">
					<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" fill="#888888" class="bi bi-diamond-fill " viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M6.95.435c.58-.58 1.52-.58 2.1 0l6.515 6.516c.58.58.58 1.519 0 2.098L9.05 15.565c-.58.58-1.519.58-2.098 0L.435 9.05a1.48 1.48 0 0 1 0-2.098z"/>
						<text x="50%" y="50%" text-anchor="middle" fill="#ffffff">All</text>
					</svg>
					</a>
				</div>
			{% for category in categories %}
				<div class="col-1 m-5">
				<a href="{{ path('app_category_show', { id: category.id }) }}">
					<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" fill="#888888" class="bi bi-diamond-fill " viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M6.95.435c.58-.58 1.52-.58 2.1 0l6.515 6.516c.58.58.58 1.519 0 2.098L9.05 15.565c-.58.58-1.519.58-2.098 0L.435 9.05a1.48 1.48 0 0 1 0-2.098z"/>
						<text x="50%" y="50%" text-anchor="middle" fill="#ffffff">{{ category.name }}</text>
					</svg>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
	{# paints #}
	<section>
		<div class="container">
			<div class="row rowStyle">
			
				{% for paint in paints %}

					<div class="col-lg-3 col-md-6  divPaints p-3 text-black text-white">
						<div class="divImage">
							<a href="{{ path('app_paint', { id: paint.id }) }}"><img src="{{ paint.photo }}" alt=""></a>
						</div>
						<div>
							<h3>{{ paint.title }}</h3>
							<div class="d-flex justify-content-end mb-3">
								<h5>{{ paint.price }}€</h5>

							</div>
							<!-- Affichage du nombre total d'étoiles -->
							<div class="d-flex justify-content-between align-items-center">
								{% set averageGrade = paint.gradeTotal / paint.gradeCount %}
								<!-- Génération des étoiles -->
								<fieldset class="rating ">
									{% for star in 1..5 %}
										{% if star <= averageGrade %}
											<span class="yellow-star">&#9733;</span>
										{% else %}
											<span class="gray-star">&#9733;</span>
										{% endif %}
									{% endfor %}
								</fieldset>

								<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#ffc106" class="bi bi-cart4" viewbox="0 0 16 16">
									<path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0"/>
								</svg>

							</div>
						</div>

						<!-- /===========/ -->
					</div>
				{% endfor %}
			</div>
		</div>
	</section>


{% endblock %}
