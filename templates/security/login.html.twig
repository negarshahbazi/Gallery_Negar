{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="w-25 divLogin text-center">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div>
					You are logged in as
					{{ app.user.userIdentifier }},
					<a class="text-white" href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal text-white">Please sign in</h1>
			<label class="text-white " for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
			<label class="text-white" for="inputPassword">Password</label>
			<input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-lg btn-dark text-white" type="submit">
				Submit
			</button>

			<div class="promo-info">

				<a href="{{ path('app_register') }}" class="btn btn-lg gradient secondary waves-effect waves-light mt-20">
					<span>Sign-up<strong>
							Free</strong>
					</span>
				</a>
			</div>
		</form>
	</div>
{% endblock %}
